@model InAndOutMVC.Models.Expense

<div class="container-fluid pt-5">
    <form method="post" class="pt-5" asp-action="DeletePost">
        <input asp-for="Id" hidden/>
        <div class="border">
            <div class="form-group row">
                <h2 class="text-black-50s p-3">Delete an expense</h2>
            </div>
            <div class="row">
                <div class="form-group row p-3">
                    <div class="col-6">
                        <label asp-for="ExpenseName"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="Amount"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="ExpenseName" disabled class="form-control" />
                    </div>
                    <div class="col-6">
                        <input asp-for="Amount" disabled class="form-control" type="text" />
                    </div>
                </div>
                <div class="form-group row pt-4 pb-4">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" type="submit" class="btn btn-success w-75">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}